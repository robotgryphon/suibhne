<Window x:Class="Ostenvighx.Suibhne.Gui.Windows.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Renaming Location" Height="150" Width="400" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="6">
                <StackPanel>
                    <WrapPanel Height="20" />
                    <TextBlock Height="20" VerticalAlignment="Bottom">Please enter a new name for this item.</TextBlock>
                    <TextBox Name="text" Grid.Column="1" />
                </StackPanel>

                <WrapPanel Height="20" />

                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>

                    <Button Content="Cancel" Grid.Column="1" Margin="0,0,2,0" IsCancel="True" Background="White" BorderBrush="Red" />
                    <Button Content="Okay" Grid.Column="2" Margin="2,0,0,0" Click="Confirm" IsDefault="True" BorderBrush="#FF00660E" Background="White" />
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>