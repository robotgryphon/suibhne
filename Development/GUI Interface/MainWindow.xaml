<Window x:Class="Ostenvighx.Suibhne.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suibhne Networking System" Height="675" Width="1200" Background="White">
    <Grid Name="WindowContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" Name="Navigation" />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Grid Background="#ff4d4d4d">
            <Menu Height="40" Width="Auto" VerticalAlignment="Center" Background="#ff4d4d4d" HorizontalAlignment="Center">
                <MenuItem Header="Suibhne" Style="{StaticResource MenuBarItem}" Template="{DynamicResource MenuItemMain}" Foreground="#FF6CFFF2">
                    <MenuItem Header="Manage Locations" Click="click_LocationsEditor"/>
                    <Separator />
                    <MenuItem Header="About Suibhne" />
                    <MenuItem Header="Exit Application" Click="ExitApplication"/>

                    <MenuItem.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </MenuItem.ItemsPanel>
                </MenuItem>
                <MenuItem Header="Extensions" Name="extensionsMenu" Style="{StaticResource MenuBarItem}" Template="{DynamicResource MenuItemMain}" Foreground="#FFFF9943">
                    <MenuItem Header="Manage..." />
                    <Separator />
                </MenuItem>
                <MenuItem Header="Scripting" Style="{StaticResource MenuBarItem}" Template="{DynamicResource MenuItemMain}" Height="20" Foreground="#FFC66AF1">
                    <MenuItem Header="Manage Scripts" />
                </MenuItem>
            </Menu>
        </Grid>

        <Grid Name="ContentArea" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>

</Window>
