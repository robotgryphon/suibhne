<Window x:Class="Ostenvighx.Suibhne.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Suibhne Networking System" Height="675" Width="1200" Background="White">
    <Grid Name="WindowContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" Name="Navigation" />
            <RowDefinition Height="*"  />
        </Grid.RowDefinitions>

        <Grid Height="40" Width="Auto" HorizontalAlignment="Stretch" Background="#ff4d4d4d" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <WrapPanel Name="GotoPanel" Grid.Column="0" Width="200" Height="30" VerticalAlignment="Center" Margin="10,5,10,5">
                <TextBox Name="GotoField" Height="20" Width="180" BorderThickness="0,0,0,1" BorderBrush="#FF8D8D8D" Background="{x:Null}" Foreground="#FFB9FFB9" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" />
                <Button Name="GotoBtn" Height="30" Width="20" Content="»" Background="{x:Null}" Foreground="White" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="16" />
            </WrapPanel>

            <WrapPanel Name="NavTabs" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button x:Name="NetworkTab" Content="Networks" Style="{StaticResource TabButton}" Click="HandleTabSwitch"></Button>

                <Button x:Name="LocationsTab" Content="Locations" Style="{StaticResource TabButton}" Click="HandleTabSwitch"></Button>
                <Button x:Name="ExtensionsTab" Content="Extensions" Style="{StaticResource TabButton}" Click="HandleTabSwitch"></Button>
                <Button x:Name="ScriptingTab" Content="Scripting" Style="{StaticResource TabButton}" Click="HandleTabSwitch"></Button>
                <Button x:Name="AboutTab" Content="About" Style="{StaticResource TabButton}" Click="HandleTabSwitch"></Button>
            </WrapPanel>
            
        </Grid>
        
        <Grid Name="ContentArea" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Background="White" />
    </Grid>

</Window>
